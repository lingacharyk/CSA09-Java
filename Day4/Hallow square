import java.util.Scanner;

public class hallow_Square {
    public static void main(String[] args){
        int a[][]=new int[4][4];
        for(int i=0;i<a.length;i++){
            for(int j=0;j<a.length;j++){
                if(i==0||j==3||i==3||j==0){
                    System.out.print("@");
                }
                else{
                    System.out.print(" ");
                }
            }
            System.out.println();
        }


    }

}
